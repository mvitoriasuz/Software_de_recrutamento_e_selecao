<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>

<!-- Header -->
<header id="header" class="ex-2-header">
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
              <h1>Entrar</h1>
              <!-- Sign Up Form -->
              <div class="form-container" action="/authenticate">
                  <form id="logInForm" data-toggle="validator" data-focus="false">
                      <div class="form-group">
                          <input type="email" class="form-control-input" name="email" required>
                          <label class="label-control" for="lemail">Email</label>
                          <div class="help-block with-errors"></div>
                      </div>
                      <div class="form-group">
                          <input type="text" class="form-control-input" name="senha" required>
                          <label class="label-control" for="lpassword">password</label>
                          <div class="help-block with-errors"></div>
                      </div>
                      <div class="form-group">
                          <button type="submit" class="form-control-submit-button">LOG IN</button>
                      </div>
                      <div class="form-message">
                          <div id="lmsgSubmit" class="h3 text-center hidden"></div>
                      </div>
                  </form>
              </div> <!-- end of form container -->
              <!-- end of sign up form -->
              <br>
              <p>Você não tem uma conta? <a class="white" href="cadastre">Cadastre-se</a></p> 

          </div> <!-- end of col -->
      </div> <!-- end of row -->
  </div> <!-- end of container -->
</header> <!-- end of ex-header -->
<!-- end of header -->